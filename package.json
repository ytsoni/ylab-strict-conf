{
  "name": "env-guard",
  "version": "0.1.0",
  "description": "Validate and type environment variables with Zod.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "dev": "tsup src/index.ts --dts --format cjs,esm --watch",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "picocolors": "^1.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.4.5"
  }
}
